<Page x:Class="Vakhitova41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vakhitova41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition> 
            <RowDefinition Height="100"></RowDefinition> <!-- для капчи -->
            <RowDefinition Height="70"></RowDefinition> <!-- для ввода капчи -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0" FontSize="20"
                   VerticalAlignment="Center" Margin="10"
                   TextAlignment="Center"></TextBlock>

        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1" FontSize="20"
                   VerticalAlignment="Center" Margin="10"
                   TextAlignment="Center"></TextBlock>

        <TextBox Name="TBoxLogin" Grid.Column="1" Grid.Row="0" 
                 FontSize="20" Margin="10"></TextBox>

        <TextBox Name="TBoxPassword" Grid.Column="1" Grid.Row="1"
                 FontSize="20" Margin="10"></TextBox>

        <Button Content="Войти как гость" Name="BtnAuthGuest"
                HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2"
                Click="BtnAuthGuest_Click"></Button>

        <Button Content="Войти" Name="BtnAuth" 
                HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2"
                Click="BtnAuth_Click"></Button>

        <!-- Капча -->
        <Border Grid.Column="1" Grid.Row="3" BorderBrush="Black" BorderThickness="1" 
                Margin="10" Background="LightYellow" HorizontalAlignment="Left"
                Name="BorderCaptcha" Visibility="Hidden" Width="220" Height="70">
            <Canvas Name="CanvasCaptcha" Width="220" Height="70" />
        </Border>

        <!-- Поле для ввода капчи -->
        <TextBlock Text="Введите капчу:" Grid.Column="0" Grid.Row="4" FontSize="20"
                   VerticalAlignment="Center" Margin="10" Name="TextBlockCaptchaInput"
                   TextAlignment="Center" Visibility="Hidden"></TextBlock>

        <TextBox Name="TBoxCaptcha" Grid.Column="1" Grid.Row="4"
                 FontSize="20" Margin="10" Width="200" HorizontalAlignment="Left"
                 Visibility="Hidden"></TextBox>

    </Grid>
    
</Page>
