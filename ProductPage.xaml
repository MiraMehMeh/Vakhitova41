<Page x:Class="Vakhitova41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vakhitova41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <WrapPanel Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0"
                   Orientation="Vertical" HorizontalAlignment="Left">
            <StackPanel Margin="5" HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Orientation="Horizontal">

                <TextBlock Text="Вы авторизованы как " Grid.Row="0" Grid.Column="0" 
                    VerticalAlignment="Top" FontSize="20"></TextBlock>

                <TextBlock Name="FIOTB" FontSize="20" VerticalAlignment="Center"></TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
            Margin="5">

                <TextBlock Text="Роль: " FontSize="20" VerticalAlignment="Center"/>

                <TextBlock Name="RoleTB" FontSize="20" VerticalAlignment="Center"/>
            </StackPanel>
        </WrapPanel>

        <TextBlock Name="TBlockCount" Grid.Row="1" Grid.Column="0" 
                   FontSize="20" Margin="5"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"></TextBlock>
        
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="5"
                    Orientation="Vertical" HorizontalAlignment="Left">
            <TextBlock Text="поиск по наименованию" TextAlignment="Center"
                Width="250" FontSize="20"></TextBlock>
            
            <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged"
                 Width="250" FontSize="15"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" Margin="5"
                    Orientation="Vertical" HorizontalAlignment="Center">
            <RadioButton Name="RButtonUp"  Content="по возрастанию стоимости" GroupName="Sort"
                Width="300" FontSize="20" 
                Checked="RButtonUp_Checked"></RadioButton>

            <RadioButton Name="RButtonDown" Content="по убыванию стоимости" GroupName="Sort"
                Width="300" FontSize="20" 
                Checked="RButtonDown_Checked"></RadioButton>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.Row="1" Margin="5"
                    Orientation="Vertical" HorizontalAlignment="Left">
            <TextBlock Text="фильтрация по скидке" TextAlignment="Center" Width="300" FontSize="20"></TextBlock>

            <ComboBox Name="ComboType" SelectionChanged="ComboType_SelectionChanged" FontSize="15" Width="200">
                <TextBlock>Все диапазоны</TextBlock>
                <TextBlock>0-9,99%</TextBlock>
                <TextBlock>10-14,99%</TextBlock>
                <TextBlock>15% и более</TextBlock>
            </ComboBox>
        </StackPanel>
        
        
        
        <ListView Name="ProductListView" Grid.Row="2" Grid.ColumnSpan="4">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="800"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Image Width="220" Grid.RowSpan="4" Grid.Column="0" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /pics/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        
                        <TextBlock Text="{Binding ProductName}" FontWeight="Bold" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left"
                            FontSize="20" TextWrapping="Wrap"></TextBlock>

                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"
                            FontSize="20"></TextBlock>

                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left"
                            FontSize="20"></TextBlock>

                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left"
                            FontSize="20"></TextBlock>

                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat=Cкидка}" Opacity="{Binding ProductDiscountAmount}" Grid.Column="2" Grid.RowSpan="3" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount}" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Left" FontSize="40"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat=% }" Opacity="{Binding ProductDiscountAmount}" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Center" FontSize="40"></TextBlock>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
