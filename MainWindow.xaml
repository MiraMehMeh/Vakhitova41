<Window x:Class="Vakhitova41.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vakhitova41"
        mc:Ignorable="d"
        Title="Vakhitova41" FontFamily="Comic Sans MS" Icon="/pics/icon.ico"
        MinWidth="1200" 
        MinHeight="700">
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="0" Background="#FFCC99"></Frame>
        <Image Source="/pics/logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="41 размер" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered"
               NavigationUIVisibility="Hidden"></Frame>

        <Button Content="Назад" Name="BtnBack" HorizontalAlignment="Right"
                Click="BtnBack_Click"></Button>
    </Grid>
</Window>
